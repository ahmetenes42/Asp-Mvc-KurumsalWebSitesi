@model IEnumerable<KurumsalWeb.Models.Entity.Yorum>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 style="margin-bottom:20px;" align="center">Blog Yorumları Listesi</h1>

<!-- Table with stripped rows -->
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Ad</th>
            <th scope="col">E-Posta</th>
            <th scope="col">Yorum</th>
            <th scope="col">Blog</th>
            <th scope="col">Onay</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yorum in Model)
        {
        <tr>
            <th>@yorum.YorumID</th>
            <td>@yorum.AdSoyad</td>
            <td>@yorum.Eposta</td>
            <td>@yorum.Icerik </td>
            <td>@yorum.Blog.Baslik </td>
            <td>@Html.DisplayFor(Model=>yorum.Onay) </td>
           

            <td><a href="/BlogYorum/YorumSil/@yorum.YorumID" class="btn btn-danger">Sil</a></td>
            <td><a href="/BlogYorum/YorumEdit/@yorum.YorumID" class="btn btn-warning">Güncelle</a></td>
        </tr>
        }



    </tbody>
</table>
<!-- End Table with stripped rows -->
