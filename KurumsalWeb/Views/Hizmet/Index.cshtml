@using KurumsalWeb.Models.Entity
@model List<Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 style="margin-bottom:20px;" align="center">Hizmetlerimiz Sayfası</h1>
<a href="/Hizmet/YeniHizmet" class="btn btn-outline-primary " style="max-width:12%; margin-bottom:25px;">Yeni Hizmet Ekle</a>

<!-- Table with stripped rows -->
<table class="table table-striped" id="tbl">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Resim</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hizmet in Model)
        {
        <tr>
            <th>@hizmet.HizmetID</th>
            <td>@hizmet.Baslik</td>
            <td>@Html.Raw(hizmet.Aciklama)</td>
            <td>
                @if (hizmet.ResimUrl == null)
                {
                    <img style="width:150px;height:100px;" src="https://haber.webdeogren.com/wp-content/uploads/2020/01/resim-yok.png" />

                }

                @if (hizmet.ResimUrl != null)
                {
                    <img style="width:150px;height:100px;" src="@hizmet.ResimUrl" />
                }



            </td>


            <td><a class="btn btn-danger btnSil" data-id="@hizmet.HizmetID">Sil</a></td>
            <td><a href="/Hizmet/HizmetEdit/@hizmet.HizmetID" class="btn btn-warning">Güncelle</a></td>
        </tr>
        }



    </tbody>
</table>
<!-- End Table with stripped rows -->
