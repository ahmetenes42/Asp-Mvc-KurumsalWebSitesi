@model KurumsalWeb.Models.Entity.Kimlik
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 style="margin-bottom:20px;" align="center">Site Ayarları Güncelle</h1>
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

@using (Html.BeginForm("Edit","Kimlik",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Site Başlığı</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x=>x.Title, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Site Anahtar Kelimeler</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Keywords, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Site Açıklama</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Logo</label>
        <div class="col-sm-9">
            <input class="form-control" type="file" name="LogoUrl" accept=".png,.jpg,.jpeg" id="formFile">
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Ünvan</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Unvan, new { @class = "form-control" })
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
}

