@model KurumsalWeb.Models.Entity.Kategori
@{
    ViewBag.Title = "KategoriEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="margin-bottom:20px;" align="center">Kategori Güncelle</h1>
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
@using (Html.BeginForm("KategoriEdit", "Kategori", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <!-- General Form Elements -->

    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Başlık</label>
        <div class="col-sm-9">
            <input type="text" name="KategoriAd" value="@Model.KategoriAd" class="form-control">
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Açıklama</label>
        <div class="col-sm-9">
            <textarea name="KategoriAciklama" class="ckeditor">@Model.KategoriAciklama</textarea>
        </div>
    </div>



    <button style="margin-top:25px; width:100px;" type="submit" class="btn btn-success ">Güncelle</button>
}


